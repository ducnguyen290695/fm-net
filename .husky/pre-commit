#!/bin/bash

green() { echo "\033[32m$1\033[0m"; }
red() { echo "\033[31m$1\033[0m"; }

run_step() {
    local message="$1"
    local command="$2"

    green "ğŸ”„ $message"
    if eval "$command"; then
        green "âœ… $message completed successfully"
    else
        red "âŒ $message failed"
        exit 1
    fi
}

run_step "Check lint" "yarn lint"
run_step "Format code" "yarn format"
